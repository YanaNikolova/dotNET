<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TVCalendar</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendar.min.css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TVCalendar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Global.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(Global.Favorites, "GetUserFavoriteShows", "Show")</li>
                    <li>@Html.ActionLink(Global.Random, "Contact", "Home")</li>
                    <li>@Html.ActionLink("Calendar", "LoadEventsIntoCalendar", "Show")</li>
                </ul>
                <div class="search-container">
                    @using (Html.BeginForm("Index", "Show", FormMethod.Post))
                    {
                        @Html.TextBox("Name")
                        <input type="submit" value=@Global.Find class="btn btn-default" />
                    }
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TVCalenadar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/moment.min.js")
    @Scripts.Render("~/Scripts/fullcalendar.js")
    @Scripts.Render("~/Scripts/script.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
